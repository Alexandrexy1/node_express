<%- include('../layouts/header', { title: "show"}) %>
<section class="bg-slate-50 w-full h-screen text-black py-10 px-20">
    <div class="flex justify-between  pb-10 border-b border-b-gray-200">
        <h1 class="text-2xl font-bold"><%= checklist.name %></h1>
        <div class="flex items-center gap-6 ">
            <a 
                href="/checklists/<%= checklist._id %>/tasks/new" 
                class="py-2 px-4 bg-green-600 text-white rounded-md hover:bg-green-700">
                New Task
            </a>
            <a 
                href="./" 
                class="py-2 px-4 roudend-md border border-gray-300 hover:border-gray-400 hover:bg-gray-200">
                Back
            </a>
        </div>
    </div>

    <% checklist.tasks.forEach(task => {%>
    <div class="mt-6 flex justify-between items-center w-11/12">
        <div class="flex items-center gap-1">
    
            <input type="checkbox">
            <p class="font-semibold text-lg"><%= task.name %></p>
        </div>
        <a 
            href="/tasks/<%= task._id %>?_method=delete"
            class="text-white bg-red-500 font-semibold py-2 px-4 hover:bg-red-600">
            Delete
        </a>
    </div>
    <% }) %>
</section>
<%- include('../layouts/footer') %>